lck teks = "Hallo dengan dunia VMK!"

print("menggunakan short-hand:")
lck hasil = teks:match("dunia")
print(hasil)

print("tanpa menggunakan short-hand:")
lck hasil = str.match(teks, "dunia")
print(hasil)

